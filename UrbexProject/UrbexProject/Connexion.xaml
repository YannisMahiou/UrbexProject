<Window x:Class="UrbexProject.Connexion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UrbexProject"
        mc:Ignorable="d"
        Title="Connexion" Height="500" Width="300">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Content="Se connecter" Click="SeConnecter" Margin="30"/>
        <StackPanel Margin="20" >
            <Label Content="CONNEXION" />
            <Label Content="Login : "/>
            <TextBox x:Name="Pseudo"/>
            <Label Content="Mot de passe : " />
            <PasswordBox x:Name="Password" MaxLength="20" />
            <Rectangle Margin="6" Height="1" Fill="Black" />
            <Label Content=" CREER UN COMPTE" />
            <Label Content="Login : "/>
            <TextBox x:Name="Pseudo2"/>
            <Label Content="Mot de passe : " />
            <PasswordBox x:Name="Password2" MaxLength="20" />
            <Label Content="Confirmation : " />
            <PasswordBox x:Name="Confirmation" MaxLength="20" />
            <Label Content="Mail" />
            <TextBox x:Name="Mail"/>
            <Rectangle Margin="6" Height="1" Fill="Black" />
        </StackPanel>
    </DockPanel>
</Window>
